{
  "manifest_version": 3,
  "name": "Font Tweak",
  "author": "https://github.com/souli-a",
  "version": "1.0",
  "description": "Font settings tweaker for Chrome",
  "options_page": "./options/options.html",
  "permissions": ["storage"],
  "icons": {
    "16": "./icons/icon.png",
    "32": "./icons/icon.png",
    "48": "./icons/icon.png",
    "128": "./icons/icon.png"
  },
  "content_scripts": [
    {
      "js": ["./scripts/content-script.js"],
      "matches": ["*://*/*"]
    }
  ]
}
